/* ===  TYPEDEFS          =================================================== */
struct local
{
    uchar8  devAddress;                 // Device to command output UV program
    uchar8  prog;                       // Local stored UV program to run
    uchar8  delay;                      // Delay in ms
};
    
struct dataWord
{
    uchar8 locUvProg;
    uchar8 irProg;
    uchar8 irDelay;
    uchar8 remUvProg[100];
};

struct command
{
    uchar8  devAddress;
    uchar8  subAddress;
    uchar8  wordCount;
    struct  dataWord *dWordQueue;
};

/* ===  STATIC GLOBAL VARIABLES  ============================================ */
/*  Table defines the programs selected by the external switch 
 *  The programs are in the following 2 Byte format from MSb to LSb:
 *  A = Device Address - 4-bits
 *  P = Program Number - 4-bits
 *  D = Delay in ms    - 8-bits
 *  Example: 0x01, 0x64 (Device address = 0, Program = 1, Delay = 100ms)
 */

