#ifndef TYPES_H
#define	TYPES_H

#ifdef	__cplusplus
extern "C" {
#endif

typedef unsigned char   uchar8;     // 0 to 255
typedef signed char     schar8;     // -128 to 127
typedef int             sint16;     // -32768 to 32767
typedef unsigned int    uint16;     // 0 to 65535

#ifdef	__cplusplus
}
#endif

#endif	/* TYPES_H */


